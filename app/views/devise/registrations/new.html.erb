<div class="form-sm p-4 mb-4 mt-5 text-center landing">
<%= render "devise/shared/error_messages", resource: resource %>
  <h4 class="display-5 mb-5">Welcome to Cocobuds</h4>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <div class="form-group">
      <%= f.label :email, class: "sr-only" %>
      <%= f.email_field :email, autofocus: true, placeholder: "Email", autocomplete: "email", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password, class: "sr-only" %>
      <%= f.password_field :password, placeholder: "Password", autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, class: "sr-only" %>
      <%= f.password_field :password_confirmation, placeholder: "Confirm Password", autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="mb-3 form-group text-center">
      <%= f.submit "Sign up", class: "btn btn-primary btn-block" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>