<div class="form-sm p-4 mb-4 mt-5 text-center landing">
<%= render "devise/shared/error_messages", resource: resource %>
  <h4 class="display-5 mb-5">Forgot your password?</h4>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

  <div class="form-group">
    <%= f.label :email, class: "sr-only" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control" %>
  </div>

  <div class="mb-3 form-group text-center">
    <%= f.submit "Send me reset password instructions", class: "btn btn-primary btn-block"  %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>